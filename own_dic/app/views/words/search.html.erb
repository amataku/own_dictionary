<header><a href="http://0.0.0.0:3000/words/index">単語一覧</a>/<a href="http://0.0.0.0:3000/words/new">単語追加</a>/単語検索</header>

<h1>単語検索</h1>
<%= form_tag(controller: "words",action: "search") do %>
  <div>検索単語 <%= text_field_tag("search") %> <%= submit_tag("検索") %></div>
<% end %>

<% @word.each do |word| %>
  <a href="http://0.0.0.0:3000/words/show/<%= word.alphabet %>"><h2><%= word.name %></h2></a>
  <div>ジャンル:<%= word.genre %></div>
<% end %>
